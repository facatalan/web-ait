---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/astro/Header.astro';
import Footer from '../../components/astro/Footer.astro';
import { getCollection } from 'astro:content';

const programas = await getCollection('programas');

// Cargar informaciÃ³n de semanas y cursos para cada programa
const programsWithDetails = programas.map((program) => {
  const weeks = program.data.weeks || [];
  const totalCourses = weeks.reduce((acc, w) => acc + w.courses.length, 0);

  return {
    ...program,
    slug: program.id.replace('.mdx', ''),
    weeksCount: weeks.length,
    coursesCount: totalCourses,
  };
});
---

<Layout title="Programas - AIThinking">
  <Header />
  <main class="min-h-screen pt-32 pb-16 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <span class="inline-block px-4 py-1.5 bg-accent-purple/10 border border-accent-purple/20 rounded-full text-accent-purple text-sm font-medium mb-4">
          Formacion Completa
        </span>
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
          Nuestros <span class="gradient-text">Programas</span>
        </h1>
        <p class="text-gray-400 text-lg max-w-2xl mx-auto">
          Programas estructurados por semanas para dominar la inteligencia artificial
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {programsWithDetails.map((program) => (
          <a
            href={`/programas/${program.slug}`}
            class="group bg-dark-800 border border-white/10 rounded-2xl p-6
                   hover:border-accent-purple/50 transition-all hover:-translate-y-1"
          >
            <div class="aspect-video bg-gradient-to-br from-accent-blue/20 to-accent-purple/20 rounded-xl mb-4 flex items-center justify-center">
              <svg class="w-16 h-16 text-accent-purple/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-2 group-hover:text-accent-purple transition-colors">
              {program.data.title}
            </h3>
            <p class="text-gray-400 text-sm mb-4 line-clamp-2">
              {program.data.description}
            </p>
            <div class="flex items-center justify-between text-sm">
              <div class="flex items-center gap-4 text-gray-500">
                <span>{program.weeksCount} semanas</span>
                <span>{program.coursesCount} cursos</span>
              </div>
              <span class="text-accent-purple group-hover:translate-x-1 transition-transform">
                Ver programa
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </main>
  <Footer />
</Layout>
