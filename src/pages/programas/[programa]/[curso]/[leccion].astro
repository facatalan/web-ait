---
import Layout from '../../../../layouts/Layout.astro';
import Header from '../../../../components/astro/Header.astro';
import Footer from '../../../../components/astro/Footer.astro';
import { getCollection } from 'astro:content';
import { ProtectedProgramLesson } from '../../../../components/react/courses/ProtectedProgramLesson';
import { ProgramLessonNav } from '../../../../components/react/courses/ProgramLessonNav';

export async function getStaticPaths() {
  const programas = await getCollection('programas');
  const cursos = await getCollection('cursos');
  const paths = [];

  for (const program of programas) {
    const programSlug = program.id.replace('.mdx', '');
    const weeks = program.data.weeks || [];

    for (const week of weeks) {
      for (const courseSlug of week.courses) {
        const courseLessons = cursos
          .filter((l) => l.data.course === courseSlug && l.id.endsWith('.mdx')) // Solo MDX (no .md)
          .sort((a, b) => a.data.order - b.data.order);

        for (const lesson of courseLessons) {
          const lessonSlug = lesson.id.split('/').pop()?.replace(/\.mdx?$/, '') || '';

          paths.push({
            params: { programa: programSlug, curso: courseSlug, leccion: lessonSlug },
            props: {
              program,
              week,
              lesson,
              courseLessons,
            },
          });
        }
      }
    }
  }

  return paths;
}

const { programa, curso, leccion } = Astro.params;
const { program, week, lesson, courseLessons } = Astro.props;
const { Content } = await lesson.render();

const currentIndex = courseLessons.findIndex(
  (l) => l.id.split('/').pop()?.replace(/\.mdx?$/, '') === leccion
);
const prevLesson = currentIndex > 0 ? courseLessons[currentIndex - 1] : null;
const nextLesson = currentIndex < courseLessons.length - 1 ? courseLessons[currentIndex + 1] : null;

function getLessonSlug(l: typeof lesson) {
  return l.id.split('/').pop()?.replace(/\.mdx?$/, '');
}

// Preparar datos para ProgramLessonNav
const lessonsForNav = courseLessons.map((l) => ({
  slug: getLessonSlug(l) || '',
  title: l.data.title,
  order: l.data.order,
}));
---

<Layout title={`${lesson.data.title} - ${program.data.title}`}>
  <Header />
  <main class="min-h-screen pt-24 pb-16">
    <div class="max-w-7xl mx-auto px-4 flex gap-8">
      <!-- Sidebar -->
      <aside class="hidden lg:block w-72 flex-shrink-0">
        <ProgramLessonNav
          client:load
          programSlug={programa}
          programTitle={program.data.title}
          courseSlug={curso}
          courseTitle={lesson.data.courseTitle}
          weekNumber={week.number}
          weekTitle={week.title}
          currentLessonSlug={leccion}
          lessons={lessonsForNav}
        />
      </aside>

      <!-- Content -->
      <article class="flex-grow min-w-0 max-w-3xl">
        <!-- Protected Content -->
        <ProtectedProgramLesson
          client:load
          programSlug={programa}
          courseSlug={curso}
          lessonSlug={leccion}
          videoId={lesson.data.videoId}
          isFree={lesson.data.isFree}
        >
          <!-- Lesson info -->
          <div class="mb-8">
            <div class="flex items-center gap-2 mb-2">
              <span class="text-sm text-gray-500">Semana {week.number} - Leccion {currentIndex + 1}</span>
              {lesson.data.isFree && (
                <span class="px-2 py-0.5 bg-green-500/10 text-green-400 text-xs rounded-full">
                  Gratis
                </span>
              )}
            </div>
            <h1 class="text-3xl md:text-4xl font-bold text-white">
              {lesson.data.title}
            </h1>
          </div>

          <!-- MDX Content -->
          <div class="prose prose-invert prose-lg max-w-none">
            <Content />
          </div>

        </ProtectedProgramLesson>

        <!-- Attachments (fuera de protección) -->
        {lesson.data.attachments && lesson.data.attachments.length > 0 && (
          <div class="mt-12 pt-8 border-t border-white/10">
            <h3 class="text-lg font-semibold text-white mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-accent-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              Recursos de la lección
            </h3>
            <div class="space-y-2">
              {lesson.data.attachments.map((attachment) => (
                <a
                  href={attachment.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center gap-3 p-3 bg-dark-800 border border-white/10 rounded-lg hover:border-accent-blue/50 transition-colors group"
                >
                  <div class="w-10 h-10 rounded-lg bg-accent-blue/10 flex items-center justify-center flex-shrink-0">
                    {attachment.type === 'pdf' ? (
                      <svg class="w-5 h-5 text-red-400" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8l-6-6zm-1 2l5 5h-5V4zm-2.5 9.5a.5.5 0 01.5.5v3a.5.5 0 01-1 0v-3a.5.5 0 01.5-.5zm3 0a.5.5 0 01.5.5v1.5h1a.5.5 0 010 1h-1V17a.5.5 0 01-1 0v-3a.5.5 0 01.5-.5zm-6 0h1a1 1 0 011 1v1a1 1 0 01-1 1h-1v1a.5.5 0 01-1 0v-3.5a.5.5 0 01.5-.5h.5z"/>
                      </svg>
                    ) : attachment.type === 'doc' || attachment.type === 'docx' ? (
                      <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8l-6-6zm-1 2l5 5h-5V4zM8 12h8v1H8v-1zm0 3h8v1H8v-1zm0 3h5v1H8v-1z"/>
                      </svg>
                    ) : attachment.type === 'xls' || attachment.type === 'xlsx' ? (
                      <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8l-6-6zm-1 2l5 5h-5V4zM8 12h2v2H8v-2zm0 4h2v2H8v-2zm4-4h2v2h-2v-2zm0 4h2v2h-2v-2z"/>
                      </svg>
                    ) : (
                      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                      </svg>
                    )}
                  </div>
                  <div class="flex-grow min-w-0">
                    <p class="text-white font-medium truncate group-hover:text-accent-blue transition-colors">
                      {attachment.title}
                    </p>
                    {attachment.type && (
                      <p class="text-xs text-gray-500 uppercase">{attachment.type}</p>
                    )}
                  </div>
                  <svg class="w-5 h-5 text-gray-500 group-hover:text-accent-blue transition-colors flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                  </svg>
                </a>
              ))}
            </div>
          </div>
        )}

        <!-- Navigation -->
        <div class="flex items-center justify-between mt-12 pt-8 border-t border-white/10">
          {prevLesson ? (
            <a
              href={`/programas/${programa}/${curso}/${getLessonSlug(prevLesson)}`}
              class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              <span>Anterior</span>
            </a>
          ) : <div />}

          {nextLesson ? (
            <a
              href={`/programas/${programa}/${curso}/${getLessonSlug(nextLesson)}`}
              class="flex items-center gap-2 px-4 py-2 bg-accent-blue hover:bg-accent-blue/80 text-white rounded-lg transition-colors"
            >
              <span>Siguiente leccion</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          ) : (
            <a
              href={`/programas/${programa}`}
              class="flex items-center gap-2 px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-colors"
            >
              <span>Volver al programa</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </a>
          )}
        </div>
      </article>
    </div>
  </main>
  <Footer />
</Layout>
