---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/astro/Header.astro';
import Footer from '../../../components/astro/Footer.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const programas = await getCollection('programas');
  const cursos = await getCollection('cursos');

  return programas.map((program) => {
    const programSlug = program.id.replace('.mdx', '');
    const weeks = program.data.weeks || [];

    // Enriquecer semanas con datos de cursos
    const weeksWithCourses = weeks.map((week) => ({
      ...week,
      coursesData: week.courses.map((courseSlug) => {
        const courseLessons = cursos.filter((l) => l.data.course === courseSlug);
        const firstLesson = courseLessons[0];
        return {
          slug: courseSlug,
          title: firstLesson?.data.courseTitle || courseSlug,
          description: firstLesson?.data.courseDescription || '',
          lessonsCount: courseLessons.length,
        };
      }),
    }));

    return {
      params: { programa: programSlug },
      props: {
        program,
        weeks: weeksWithCourses,
      },
    };
  });
}

const { programa } = Astro.params;
const { program, weeks } = Astro.props;
---

<Layout title={`${program.data.title} - AIThinking`}>
  <Header />
  <main class="min-h-screen pt-32 pb-16 px-4">
    <div class="max-w-4xl mx-auto">
      <a href="/programas" class="inline-flex items-center text-gray-400 hover:text-white mb-8 transition-colors">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Volver a programas
      </a>

      <div class="mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
          {program.data.title}
        </h1>
        <p class="text-gray-400 text-lg">
          {program.data.description}
        </p>
        <div class="flex items-center gap-4 mt-6 text-sm text-gray-500">
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            {weeks.length} semanas
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            {weeks.reduce((acc, w) => acc + w.coursesData.length, 0)} cursos
          </span>
        </div>

        <!-- Community link -->
        <a
          href={`/programas/${programa}/comunidad`}
          class="inline-flex items-center gap-2 mt-6 px-4 py-2 bg-dark-700 border border-white/10 rounded-lg
                 text-gray-300 hover:text-white hover:border-accent-purple/50 transition-all"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
          </svg>
          Comunidad del programa
        </a>
      </div>

      <!-- Weeks -->
      <div class="space-y-8">
        {weeks.map((week) => (
          <div class="bg-dark-800 border border-white/10 rounded-2xl p-6">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-10 h-10 rounded-full bg-gradient-to-br from-accent-blue to-accent-purple flex items-center justify-center text-white font-bold">
                {week.number}
              </div>
              <div>
                <h2 class="text-xl font-bold text-white">{week.title}</h2>
                {week.description && (
                  <p class="text-gray-500 text-sm">{week.description}</p>
                )}
              </div>
            </div>

            <div class="space-y-3 mt-4">
              {week.coursesData.map((course) => (
                <a
                  href={`/programas/${programa}/${course.slug}`}
                  class="group flex items-center gap-4 p-4 bg-dark-700 border border-white/5 rounded-xl
                         hover:border-accent-blue/50 transition-all"
                >
                  <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-dark-600 flex items-center justify-center
                            text-accent-blue group-hover:bg-accent-blue/20 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div class="flex-grow min-w-0">
                    <h3 class="text-white font-medium group-hover:text-accent-blue transition-colors">
                      {course.title}
                    </h3>
                    <p class="text-gray-500 text-sm truncate">
                      {course.lessonsCount} lecciones
                    </p>
                  </div>
                  <svg class="w-5 h-5 text-gray-500 group-hover:text-accent-blue group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </main>
  <Footer />
</Layout>
