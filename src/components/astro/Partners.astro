---
const partners = [
  { name: 'OpenAI', logo: '/images/logos/openai.png', large: false },
  { name: 'Anthropic', logo: '/images/logos/anthropic.png', large: true },
  { name: 'Perplexity', logo: '/images/logos/perplexity.webp', large: true },
  { name: 'Gemini', logo: '/images/logos/gemini.png', large: false },
  { name: 'Gamma', logo: '/images/logos/gamma.png', large: false },
];
---

<section class="py-16 bg-dark-800/50 border-y border-white/5">
  <div class="max-w-7xl mx-auto px-6">
    <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12">
      {partners.map((partner) => (
        <div class="flex items-center justify-center h-20 opacity-70 hover:opacity-100 transition-opacity">
          <img
            src={partner.logo}
            alt={partner.name}
            class={`w-auto object-contain brightness-0 invert ${partner.large ? 'h-21 md:h-[105px]' : 'h-14 md:h-[70px]'}`}
          />
        </div>
      ))}
    </div>
  </div>
</section>
