---
const criteria = [
  { text: 'Tienes', highlight: 'experiencia profesional', suffix: 'que otros valoran' },
  { text: 'Usas IA pero sientes que hay', highlight: 'mucho más potencial', suffix: 'sin explotar' },
  { text: 'Quieres', highlight: 'resultados 10x,', suffix: 'no trucos 2x' },
  { text: 'Estás listo para invertir', highlight: '3 horas/semana', suffix: 'en transformar tu forma de trabajar' },
];
---

<section class="py-12 bg-dark-900">
  <div class="max-w-5xl mx-auto px-6">
    <div class="flex items-center gap-4 mb-16">
      <span class="text-accent-blue font-mono text-sm">03</span>
      <div class="h-px flex-1 bg-gradient-to-r from-accent-blue/50 to-transparent"></div>
    </div>

    <h2 class="text-4xl md:text-5xl font-bold mb-12">
      Este programa es para ti si...
    </h2>

    <div class="grid gap-6">
      {criteria.map((item, index) => (
        <div class="flex items-start gap-4 p-6 bg-dark-800/50 rounded-xl border border-white/5 hover:border-accent-blue/30 transition-colors">
          <div class="w-8 h-8 rounded-full bg-accent-blue/20 flex items-center justify-center flex-shrink-0 mt-1">
            <svg class="w-4 h-4 text-accent-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <p class="text-lg text-gray-300">
            {item.text} <span class="text-white font-semibold">{item.highlight}</span> {item.suffix}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
