    label: 'industrias',
  },
];
---

<section class="py-12 bg-dark-900 border-y border-white/5">
  <div class="max-w-6xl mx-auto px-6">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      {metrics.map((metric) => (
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-bold text-white mb-2 gradient-text">
            {metric.value}
          </div>
          <div class="text-sm md:text-base text-gray-400">
            {metric.label}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
